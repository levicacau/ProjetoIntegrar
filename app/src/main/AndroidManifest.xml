<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="poder.ufac.br.projetointegrar" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TarefaActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_tarefa"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SpeechActivity"
            android:label="@string/title_activity_speech" >
        </activity>
        <activity
            android:name=".TesteSQLiteActivity"
            android:label="@string/title_activity_teste_sqlite" >
        </activity>
        <activity
            android:name=".StudyListActivity"
            android:label="@string/title_activity_study_list" >
        </activity>
        <activity
            android:name=".ListarCompromissoActivity"
            android:label="@string/title_activity_adicionar_compromisso" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CalendarioActivity" />
        </activity>
        <activity
            android:name=".AdicionarCompromissosActivity"
            android:label="@string/title_activity_adicionar_compromissos" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListarCompromissoActivity" />
        </activity>
        <activity
            android:name=".CalendarioActivity"
            android:label="@string/title_activity_calendario" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AgendaActivity"
            android:label="@string/title_activity_agenda" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AgendaViewPagerActivity"
            android:label="@string/title_activity_agente_view_pager" >
        </activity>
    </application>

</manifest>
