<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5sp">
    <ImageView
        android:id="@+id/imageViewCompromissoItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textViewCompromissoNomeTarefaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#FF000000"
        android:layout_gravity="center_horizontal"
        android:text="Tarefa"
        android:layout_alignTop="@+id/imageViewCompromissoItem"
        android:layout_toRightOf="@+id/imageViewCompromissoItem"
        android:layout_toEndOf="@+id/imageViewCompromissoItem"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horario"
        android:id="@+id/textViewCompromissoHorarioItem"
        android:layout_below="@+id/textViewCompromissoNomeTarefaItem"
        android:layout_toRightOf="@+id/imageViewCompromissoItem"
        android:layout_toEndOf="@+id/imageViewCompromissoItem"
        android:padding="5dp" />


</RelativeLayout>